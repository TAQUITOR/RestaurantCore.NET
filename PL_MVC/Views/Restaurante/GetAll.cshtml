@model ML.Restaurante

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<container>
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="row">
                    <div class="col" style="padding-bottom:20px">
                        <a href="@Url.Action("Form","Restaurante")" class="btn btn-info"><i class="bi bi-person-plus"></i></a>
                    </div>
                </div>
                <div class="col">
                    <table class="table table-responsive">
                        <thead class="table-dark">
                            <tr>
                                <td>IdRestaurante</td>
                                <td>Imagen</td>
                                <td>Nombre</td>
                                <td>Slogan</td>
                                <td>Descripcion</td>
                                <td>Editar</td>
                                <td>Eliminar</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Restaurante item in Model.Restaurantes) 
                            { 
                                <tr> 
                                    <td>@item.IdRestaurante</td> 
                                    @if (item.Imagen != null)
                                    {
                                        <td>
                                            <img src="data:image/*;base64,@Convert.ToBase64String(item.Imagen)" style="width:50px" />
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <img src="~/css/Imagenes/defaultuser.png" style="width:50px" />
                                        </td>
                                    }
                                    <td>@item.Nombre</td> 
                                   <td>@item.Slogan</td> 
                                    <td>@item.Descripcion</td> 
                                    <td>
                                        <a class="btn btn-warning" href="@Url.Action("Form","Restaurante", new {IdRestaurante = item.IdRestaurante})"><i class="bi bi-pencil-square"></i></a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" href="@Url.Action("Delete", "Restaurante", new {IdRestaurante = item.IdRestaurante})"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>     
                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</container>
